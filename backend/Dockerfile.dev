# Development Dockerfile for Go backend
FROM golang:1.25.1-alpine

# Install build dependencies for CGO (required for sqlite3 and postgres)
RUN apk add --no-cache gcc musl-dev sqlite-dev postgresql-dev

# Install air for hot reload
RUN go install github.com/air-verse/air@latest

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Enable CGO for sqlite3
ENV CGO_ENABLED=1

# Expose backend port
EXPOSE 8080

# Use air for hot reload in development
CMD ["air", "-c", ".air.toml"]
